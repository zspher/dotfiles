    display-run: "îš‘";
    drun-display-format: "{name} <span weight='normal' size='small'>{generic}</span>\n<span weight='light' size='x-small'>{comment}</span>";
    combi-display-format: "{text}";
    show-icons: true;

    drun-show-actions: true;
    sorting-method: "fzf";
    tokenize: true;
    eh: 2;

    calc {
        calc-command: "wl-copy '{result}'";
    }

    kb-row-down: "Down,Control+j";
    kb-row-up: "Up,Control+k";
    kb-accept-entry: "Control+y,Control+m,Return,KP_Enter";
    kb-remove-to-eol: "";

    kb-select-1: "Alt+1";
    kb-select-2: "Alt+2";
    kb-select-3: "Alt+3";
    kb-select-4: "Alt+4";
